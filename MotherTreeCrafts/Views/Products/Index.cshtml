@model IEnumerable<MotherTreeCrafts.Models.Product>

@{
    ViewData["Title"] = "Products";
}

<div class="container mt-4">
    <div class="row mb-4">
        <div class="col-md-12">
            <h1 class="mb-3">
                <i class="bi bi-box-seam"></i> Products
            </h1>
            
            @if (TempData["SuccessMessage"] != null)
            {
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    @TempData["SuccessMessage"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }
            
            @if (TempData["ErrorMessage"] != null)
            {
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    @TempData["ErrorMessage"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }
            
            <div class="d-flex justify-content-between align-items-center mb-3">
                <a asp-action="Create" class="btn btn-success">
                    <i class="bi bi-plus-circle"></i> Create New Product
                </a>
                <span class="text-muted">Total Products: @Model.Count()</span>
            </div>
        </div>
    </div>

    @if (!Model.Any())
    {
        <div class="alert alert-info" role="alert">
            <h4 class="alert-heading">No products found</h4>
            <p>Get started by creating your first product!</p>
            <hr>
            <a asp-action="Create" class="btn btn-primary">Create Product</a>
        </div>
    }
    else
    {
        <div class="row">
            @foreach (var product in Model)
            {
                <div class="col-md-6 col-lg-4 mb-4">
                    <div class="card h-100">
                        @if (!string.IsNullOrEmpty(product.ImageUrl))
                        {
                            <img src="@product.ImageUrl" class="card-img-top" alt="@product.Title" style="height: 200px; object-fit: cover;">
                        }
                        else
                        {
                            <div class="card-img-top bg-light d-flex align-items-center justify-content-center" style="height: 200px;">
                                <i class="bi bi-image" style="font-size: 3rem; color: #ccc;"></i>
                            </div>
                        }
                        
                        <div class="card-body">
                            <h5 class="card-title">@product.Title</h5>
                            <p class="card-text text-muted" style="font-size: 0.9rem;">
                                @if (!string.IsNullOrEmpty(product.Description))
                                {
                                    @(product.Description.Length > 100 ? product.Description.Substring(0, 100) + "..." : product.Description)
                                }
                                else
                                {
                                    <em>No description</em>
                                }
                            </p>
                            
                            <div class="mb-2">
                                <span class="badge bg-primary">@product.Price.ToString("C")</span>
                                @if (product.IsFeatured)
                                {
                                    <span class="badge bg-warning text-dark">Featured</span>
                                }
                                @if (!product.IsActive)
                                {
                                    <span class="badge bg-danger">Inactive</span>
                                }
                                @if (product.IsDigitalProduct)
                                {
                                    <span class="badge bg-info">Digital</span>
                                }
                            </div>
                            
                            @if (product.Inventory != null)
                            {
                                <p class="mb-2">
                                    <small class="text-muted">
                                        Stock: <span class="@(product.StockQuantity > 0 ? "text-success" : "text-danger")">
                                            @product.StockQuantity units
                                        </span>
                                    </small>
                                </p>
                            }
                        </div>
                        
                        <div class="card-footer bg-transparent">
                            <div class="btn-group w-100" role="group">
                                <a asp-action="Details" asp-route-id="@product.ProductId" class="btn btn-sm btn-outline-primary">
                                    <i class="bi bi-eye"></i> Details
                                </a>
                                <a asp-action="Edit" asp-route-id="@product.ProductId" class="btn btn-sm btn-outline-secondary">
                                    <i class="bi bi-pencil"></i> Edit
                                </a>
                                <a asp-action="Delete" asp-route-id="@product.ProductId" class="btn btn-sm btn-outline-danger">
                                    <i class="bi bi-trash"></i> Delete
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>
